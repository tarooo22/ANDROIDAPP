<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANDROIDAPP.ProfilePage"
             Title="Profile"
             BackgroundColor="LightGray">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Frame WidthRequest="100" HeightRequest="100" CornerRadius="50" HorizontalOptions="Center">
            <Image Source="profile_icon.png" Aspect="AspectFill" />
        </Frame>
        <VerticalStackLayout>
            <Label Text="Name" FontSize="16" />
            <Entry Placeholder="Enter your name" Text="Nika Tarashvili" />

            <Label Text="Email" FontSize="16" />
            <Entry Placeholder="Enter your email" Text="nika.tarashvili@gmail.com" />

            <Label Text="Phone" FontSize="16" />
            <Entry Placeholder="Enter your phone number" Text="+99512345678" />
        </VerticalStackLayout>
        <Button Text="Save Changes" BackgroundColor="#4CAF50" TextColor="Black" CornerRadius="15" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
